generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Squad {
    id   Int    @id @default(autoincrement())
    name String

    user User[]

    @@map("squad")
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String
    password String
    role     String
    squad_id Int?

    squad Squad? @relation(fields: [squad_id], references: [id])
    task  Task[]

    @@map("user")
}

model Task {
    id          Int      @id @default(autoincrement())
    title       String
    description String?
    limit_date  DateTime
    status      String
    user_id     Int?

    user       User?        @relation(fields: [user_id], references: [id])
    attachment Attachment[]

    @@map("task")
}

model Attachment {
    id            Int    @id @default(autoincrement())
    description   String
    original_name String
    file_name     String
    task_id       Int

    task Task @relation(fields: [task_id], references: [id])

    @@map("attachment")
}
